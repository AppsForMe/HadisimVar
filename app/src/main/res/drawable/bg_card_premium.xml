<?xml version="1.0" encoding="utf-8"?><!-- ═══════════════════════════════════════════════════════════════ -->
<!-- ✨ PREMİUM KART - Glassmorphism Efektli                        -->
<!-- ═══════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dış gölge -->
    <item
        android:bottom="0dp"
        android:left="3dp"
        android:right="3dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#25000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Ana kart - Cam efekti -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="#F0FFFFFF"
                android:endColor="#E8F5FF"
                android:startColor="#F8FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/glass_border" />
        </shape>
    </item>
    <!-- Üst parlaklık highlight -->
    <item
        android:bottom="5dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#00FFD700"
                android:startColor="#40FFD700"
                android:type="linear" />
            <corners android:radius="23dp" />
        </shape>
    </item>
</layer-list>
