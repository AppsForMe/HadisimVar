                        android:textSize="13sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_favorite_border"
                        app:iconSize="20dp"
                        app:iconTint="@color/coral_red" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

